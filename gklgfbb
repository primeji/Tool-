    <script>
        function cloneVideo() {
            let videoUrl = document.getElementById("videoUrl").value;
            let videoElement = document.getElementById("clonedVideo");
            if (videoUrl) {
                videoElement.src = videoUrl;
                videoElement.play();
            } else {
                alert("Please enter a valid video URL.");
            }
        }
